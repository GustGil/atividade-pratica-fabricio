  escreval("_________________________")
  escreval("|Limões                  |")
  escreval("|Açucar                  |")
  escreval("|Gelo                    |")
  escreval("|Canela (Opcional)       |")
  escreval("_________________________")
  escreval("|-------|R$20,00|--------|")
  escreval("_________________________")
  valor <- 20.00
fimprocedimento

