procedimento manhattan()
inicio
  escreval("_________________________")
  escreval("|      Manhattan         |")
  escreval("_________________________")
  escreval("|Bourbon                 |")
  escreval("|Vermute doce            |")
  escreval("|Cereja (Guarnição)      |")
  escreval("|Gelo                    |")
  escreval("_________________________")
  escreval("|------|R$28,00|---------|")
  escreval("_________________________")
  valor <- 28.00
fimprocedimento

inicio
  indice2 <- 0
  total <- 0

  enquanto indice2 = 0 faca
    caipirinha_de_vinho()
    sex_on_the_beach()
    lagoa_azul()
    pina_colada()
    gin_e_tonica()
    manhattan()

    escreval("Escolha um drink:")
    escreval("1. Caipirinha de Vinho")
    escreval("2. Sex on the Beach")
    escreval("3. Lagoa Azul")
    escreval("4. Piña Colada")
    escreval("5. Gin e Tônica")
    escreval("6. Manhattan")
    indice <- indice + 1
    escreva("Digite a opção desejada: ")
    leia(opcao)

    escolha opcao
      caso 1
        carrinho[indice] <- "Caipirinha de Limao"
        total <- total + valor
      caso 2
        carrinho[indice] <- "Sex on the Beach"
        total <- total + valor
      caso 3
        carrinho[indice] <- "Lagoa Azul"
        total <- total + valor
      caso 4
        carrinho[indice] <- "Piña Colada"
        total <- total + valor
      caso 5
        carrinho[indice] <- "Gin e Tônica"
        total <- total + valor
      caso 6
        carrinho[indice] <- "Manhattan"
        total <- total + valor
      senao
        escreval("Essa opção não existe! Por favor, digite outro número: ")
    fimescolha

    escreval("Ótima escolha!")
    escreval("")
    escreval("Deseja finalizar o pedido ou gostaria de pedir mais coisas? 'S' para continuar pedindo, 'N' para finalizar pedido: ")
    leia(conf_ped)

    se conf_ped = "N" entao
      indice2 <- 1
    fimse

  fimenquanto

  escreval("Obrigado por usar o Menu de Drinks!")
  escreval("O valor total da sua compra é: R$", total:2)
fimalgoritmo
